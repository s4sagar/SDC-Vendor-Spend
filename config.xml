<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bsm-spendtracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpendTracker</name>
    <description>
        Track the SDC wise vendor spend of BSM.
    </description>
    <author email="vidya.sagar@bs-shipmanagement.com" href="http://vsagar.me">
        Vidya Sagar. S
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="cordova/cordova_ios_57.png" width="57" height="57" />
    <icon src="cordova/cordova_ios_72.png" width="72" height="72" />
    <icon src="cordova/cordova_ios_114.png" width="114" height="114" />
    <icon src="cordova/cordova_ios_144.png" width="144" height="144" />

    <icon src="cordova/cordova_android_36.png" width="36" height="36" />
    <icon src="cordova/cordova_android_48.png" width="48" height="48" />
    <icon src="cordova/cordova_android_72.png" width="72" height="72" />
    <icon src="cordova/cordova_android_96.png" width="96" height="96" />

    <icon src="cordova/cordova_16.png" width="16" height="16" />
    <icon src="cordova/cordova_24.png" width="24" height="24" />
    <icon src="cordova/cordova_32.png" width="32" height="32" />
    <icon src="cordova/cordova_48.png" width="48" height="48" />
    <icon src="cordova/cordova_64.png" width="64" height="64" />
    <icon src="cordova/cordova_128.png" width="128" height="128" />
    <icon src="cordova/cordova_256.png" width="256" height="256" />
    <icon src="cordova/cordova_512.png" width="512" height="512" />

    <plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
    <plugin name="SplashScreen" value="CDVSplashScreen" />

    <gap:splash src="cordova/res/screen/android_ldpi_portrait.png" gap:platform="android" gap:density="ldpi"/>
    <gap:splash src="cordova/res/screen/android_mdpi_portrait.png" gap:platform="android" gap:density="mdpi"/>
    <gap:splash src="cordova/res/screen/android_hdpi_portrait.png" gap:platform="android" gap:density="hdpi"/>
    <gap:splash src="cordova/res/screen/android_xhdpi_portrait.png" gap:platform="android" gap:density="xhdpi"/>
    <gap:splash src="cordova/res/screen/blackberry_transparent_300.png" gap:platform="blackberry"/>
    <gap:splash src="cordova/res/screen/iphone_portrait.png" gap:platform="ios" width="320" height="480"/>
    <gap:splash src="cordova/res/screen/iphone_retina_portrait.png" gap:platform="ios" width="640" height="960"/>
    <gap:splash src="cordova/res/screen/ipad_portrait.png" gap:platform="ios" width="768" height="1024"/>
    <gap:splash src="cordova/res/screen/ipad_landscape.png" gap:platform="ios" width="1024" height="768"/>
    <gap:splash src="cordova/res/screen/windows_phone_portrait.jpg" gap:platform="winphone"/>

    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
</widget>
